    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/src/main.ts",
            "cwd": "${workspaceRoot}/src",
            "outFiles": ["${workspaceRoot}/dest/**/*.js"],
            "sourceMaps": true
        },
        {
            "name": "gulp.js File",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "cwd": "${workspaceRoot}",
            "args": [],
            "stopOnEntry": true
        }
    ]
}